spring.application.name=api-gateway

server.port=7777

 # Service-1 :Routing configuration for Spring Cloud Gateway
   spring.cloud.gateway.routes[0].id=currency-service
   spring.cloud.gateway.routes[0].uri=lb://currency-service
   spring.cloud.gateway.routes[0].predicates[0]=Path=/api/v1/currency

   # Service-2 :Routing configuration for Spring Cloud Gateway
   spring.cloud.gateway.routes[1].id=currency-exchange
   spring.cloud.gateway.routes[1].uri=lb://currency-exchange
   spring.cloud.gateway.routes[1].predicates[0]=Path=/from/{fromCurrency}/to/{toCurrency}

   # Enable Eureka client for service discovery
   eureka.client.serviceUrl.defaultZone=http://localhost:8761/eureka/
   eureka.client.register-with-eureka=true
   eureka.client.fetch-registry=true